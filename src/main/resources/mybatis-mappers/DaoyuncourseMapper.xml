<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.admin.server.dao.DaoyuncourseDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.courseName != null and params.courseName != ''">
				and course_name = #{params.courseName} 
			</if>
			<if test="params.teacherName != null and params.teacherName != ''">
				and teacher_name = #{params.teacherName} 
			</if>
			<if test="params.courseClass != null and params.courseClass != ''">
				and course_class = #{params.courseClass} 
			</if>
			<if test="params.type != null and params.type != ''">
				and type = #{params.type} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from daoyuncourse t
		<include refid="where" />
	</select>

	<select id="list" resultType="Daoyuncourse">
		select * from daoyuncourse t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update daoyuncourse t
		<set>
			<if test="courseName != null">
				course_name = #{courseName}, 
			</if>
			<if test="teacherName != null">
				teacher_name = #{teacherName}, 
			</if>
			<if test="courseClass != null">
				course_class = #{courseClass}, 
			</if>
			<if test="type != null">
				type = #{type}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
